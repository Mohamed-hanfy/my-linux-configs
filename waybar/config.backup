{
    "layer": "top",
    "position": "top",
    "height": 36,
    "spacing": 4,
    "margin-top": 0,
    "margin-bottom": 0,

    "modules-center": ["sway/workspaces", "tray"],
    "modules-left": ["custom/hostname"],
    "modules-right": ["custom/audio","custom/mic","network","battery","clock"],

    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "format": "{name}"
    },

    "tray": {
        "icon-size": 18,
        "spacing": 10
    },

   "clock": {
    "timezone": "Africa/Cairo",
    "format": "{:%H:%M}",
    "tooltip-format": "{:%A, %B %d, %Y}",
    "interval": 60
},


    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "‚ö°{capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    "network": {
        "format-wifi": "Ôá´ {signalStrength}%",
        "format-ethernet": "Connected ÔÉÅ ",
        "tooltip-format": "{ifname}: {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "on-click-right": "bash ~/.config/rofi/wifi_menu/rofi_wifi_menu"
    },

    "custom/audio": {
        "format": "{}",
        "signal": 8,
        "interval": "once",
        "exec": "/home/mohamed/.config/sway/audio.sh",
        "on-click": "pavucontrol"
    },

    "custom/hostname": {
        "format": "üñ≥  {}",
        "exec": "/usr/bin/hostname -f",
        "interval": "once",
        "on-click": "/usr/bin/rxvt -e /usr/bin/htop"
    },

    "custom/mic": {
        "exec": "/home/mohamed/.config/sway/mic.sh",
        "interval": 2,
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
        "tooltip": false
    }
}

